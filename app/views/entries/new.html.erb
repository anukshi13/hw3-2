<h1>New Entry for <%= @place.name %></h1>
<%= form_with(model: @entry, local: true) do |form| %>
  <%= form.hidden_field :place_id %>
  <p><%= form.label :title %><br><%= form.text_field :title %></p>
  <p><%= form.label :description %><br><%= form.text_area :description %></p>
  <p><%= form.label :date %><br><%= form.date_field :date %></p> <!-- Use date_field as requested -->
  <%= form.submit "Save Entry" %>
<% end %>